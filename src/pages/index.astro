<style>
	.copp {
		display: grid; 
		grid-template-columns: 1fr 1fr 1fr 1fr 1fr; 
		grid-template-rows: 1fr 1fr 1fr; 
		gap: 15px; 
		grid-template-areas: 
			"aside-header top-header top-header top-header time"
			"aside-header facuflix tesla split-bill mm"
			"aside-header facuflix tesla split-bill mm"
			"bot-footer bot-footer about-me about-me about-me"
			"bot-footer bot-footer about-me about-me about-me"; 

		width: 100%;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		max-height: 920px;
	}
	.frontEnd{
		display: none;
	}
	
	@media (max-width: 1180px) {
		.copp{
			grid-template-columns: 1fr 1fr 1fr 1fr; 
			grid-template-rows: 1fr 1fr 1fr; 
			grid-template-areas: 
			"aside-header top-header top-header top-header"
			"aside-header facuflix split-bill mm"
			"aside-header facuflix split-bill mm"
			"bot-footer bot-footer about-me about-me"
			"bot-footer bot-footer about-me about-me"; 

		}	
		.time{
			display: none;
		}	
		.tesla{
			display: none;
		}
		.facuflix{
			height: 390px;
		}
		.fotoFacu{
			width: 150px;
		}
		
	}
	@media (max-width: 1120px){
		.copp{
			grid-template-columns: 1fr 1fr 1fr 1fr; 
			grid-template-rows: 1fr 1fr 1fr; 
			grid-template-areas: 
			"aside-header top-header top-header top-header"
			"aside-header facuflix split-bill mm"
			"aside-header facuflix split-bill mm"
			"about-me about-me about-me about-me"
			"bot-footer bot-footer bot-footer bot-footer"; 

		}	
	}
	@media (max-width: 1120px){
		.copp{
			display: flex;
			flex-direction: column;
		}
		.frontEnd{
			display: block;
		}
		.top-header{
			display: none;
		}

		.projects{
			min-height: 350px;
		}
		.tesla{
			display: flex;
		}
		.teslaDescription{
			opacity: 1 !important;
	    }
		.mmDescription{
			opacity: 1 !important;
	    }
		.split-billDescription{
			opacity: 1 !important;
	    }
		.facuclixDescription{
			opacity: 1 !important;
	    }
		.facuflix{
			background-image:linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.8) 100%), url('https://porfolio2-0-livid.vercel.app/projects/facuflix.png') !important;
		}
		.tesla{
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			background-image:linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.8) 100%),  url('https://porfolio2-0-livid.vercel.app/projects/tesla.png') !important;
		}
		.split-bill{
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			background-image:linear-gradient(180deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 100%),  url('https://porfolio2-0-livid.vercel.app/projects/split-bill.jpg') !important;
		}
		.mm{
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			background-image:linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.8) 100%),  url('https://porfolio2-0-livid.vercel.app/projects/mm.jpg') !important;
		}
		main{
			padding-bottom: 5px;
		}
		p{
			font-size: large;
		}
		h1{
			font-size: 2.5rem;
		}
		h4{
			font-size: 1.5rem;
		}
	}
	
	.aside-header { grid-area: aside-header; }
	.about-me { grid-area: about-me; }
	.project { grid-area: project; }
	.bot-footer { 
		grid-area: bot-footer; 
		background-image: url('https://porfolio2-0-livid.vercel.app/bg-top.jpg');
		background-position: bottom right;
		padding: 10px;
	}
	.top-header { grid-area: top-header; }
	.about-me{
		background-image: url('https://porfolio2-0-livid.vercel.app/stars.svg');
		background-size: contain;
	}


	.facuflix{
		grid-area: facuflix;
		background-image: url('https://porfolio2-0-livid.vercel.app/projects/facuflix.png');
		background-size: cover;
		background-position: center;
	}
	.facuflix:hover{
		background-image:linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.8) 100%), url('https://porfolio2-0-livid.vercel.app/projects/facuflix.png');
		background-size: cover;
		background-position: center;
	}
	.facuclixDescription{
		opacity: 0;
		transition-duration: 1s;
		text-wrap: wrap;

	}
	.facuflix:hover .facuclixDescription{
		opacity: 1;
	}


	.split-bill{
		grid-area: split-bill;
		background-image:url('https://porfolio2-0-livid.vercel.app/projects/split-bill.jpg');
		background-size: cover;
		background-position: center;

	}
	.split-bill:hover{
		background-image:linear-gradient(180deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.6) 100%),  url('https://porfolio2-0-livid.vercel.app/projects/split-bill.jpg');
		background-size: cover;
		background-position: center;
	}
	.split-billDescription{
		opacity: 0;
		transition-duration: 1s;
		text-wrap: wrap;

	}
	.split-bill:hover .split-billDescription{
		opacity: 1;
	}

	.mm{
		grid-area: mm;
		background-image:url('https://porfolio2-0-livid.vercel.app/projects/mm.jpg');
		background-size: cover;
		background-position: center;
	}
	.mm:hover{
		background-image:linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.8) 100%),  url('https://porfolio2-0-livid.vercel.app/projects/mm.jpg');
		background-size: cover;
		background-position: center;
	}
	.mmDescription{
		opacity: 0;
		transition-duration: 1s;
		text-wrap: wrap;

	}
	.mm:hover .mmDescription{
		opacity: 1;
	}

	.tesla{
		grid-area: tesla;
		background-image:url('https://porfolio2-0-livid.vercel.app/projects/tesla.png');
		background-size: cover;
		background-position: center;
	}
	.tesla:hover{
		background-image:linear-gradient(180deg, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.8) 100%),  url('https://porfolio2-0-livid.vercel.app/projects/tesla.png');
		background-size: cover;
		background-position: center;
	}
	.teslaDescription{
		opacity: 0;
		transition-duration: 1s;
		text-wrap: wrap;

	}
	.tesla:hover .teslaDescription{
		opacity: 1;
	}

	.clock{
		background: linear-gradient(to bottom, #7949CB 0%, #1572B6 100%);

		-webkit-text-fill-color: transparent;
		-webkit-background-clip: text;
	}

	.nombre{
		background: linear-gradient(to right, #D98ACE 0%, #ad69bb 25%, rgb(145, 90, 175) 100%);

		-webkit-text-fill-color: transparent;
		-webkit-background-clip: text;
	}


</style>
